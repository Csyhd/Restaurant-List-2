<h1 class="mb-1 restaurant-show-title">{{list.name}}</h1>
<div class="container">

  <div class="card-body p-3 col-6 col-md-10 mx-auto row">
    <a class="btn btn-secondary ml-1" href="/restaurants/{{ list._id }}/edit">edit</a>
    <form action="/restaurants/{{ list._id }}/delete" method="POST" style="display: inline;">
      <button class="btn btn-danger ml-1" type="submit">delete</button>
    </form>
    <a href="/" class="btn btn-dark ml-1">Back</a>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-6 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{list.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{list.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{list.phone}}
      </p>

      <p class="mb-5">
        {{list.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{list.image}}" alt="{{list.name}}"
        style="max-width: 600px;">
    </div>
  </div>

</div>