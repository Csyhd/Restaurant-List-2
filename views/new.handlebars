<form action="/restaurants" method="POST" class="container">
  <div class="row">
    <div class="form-group col-12">
      <label for="description">圖片</label>
      <textarea type="text" class="form-control w-50" id="image" placeholder="image" name="image"
        value="{{list.image}}"></textarea>
    </div>
    <div class="form-group col-12">
      <label for="name">餐廳名稱</label>
      <input type="text" class="form-control w-50" id="name" placeholder="name" name="name" value="{{ list.name }}">
    </div>
    <div class="form-group col-12">
      <label for="category">類型</label>
      <input type="text" class="form-control w-50" id="category" placeholder="category" name="category"
        value="{{list.category}}">
    </div>
    <div class="form-group col-12">
      <label for="location">地址</label>
      <input type="text" class="form-control w-50" id="location" placeholder="location" name="location"
        value="{{list.location}}">
    </div>
    <div class="form-group col-12">
      <label for="phone">電話</label>
      <input type="text" class="form-control w-50" id="phone" placeholder="phone number" name="phone"
        value=" {{list.phone}}">
    </div>
    <div class="form-group col-12">
      <label for="description">介紹</label>
      <textarea type="text" class="form-control w-50" id="description" placeholder="description" name="description"
        value="{{list.description}}"></textarea>
    </div>
    <button type="submit" class="btn btn-primary ml-2">確認</button>
    <a href="/" class="btn btn-primary ml-2">返回</a>
  </div>

</form>